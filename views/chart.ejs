<script>

    function setDropdown(currency, code){
      //console.log(currency);
	    var btn = $('#dropdownMenuButton');
	    btn.text(currency);
      getCurrencyChart(code);
    }
    
    function getCurrencyChart(code){
        var her;
        var da = [];
        var maxi = -1;
        var mini = 987654321;

          $.ajax({
              url:'http://localhost:3000/chart/mychart',
              type : 'POST',
              data : {
                code : code
              },        
              success: callbackFun
          })
      
      function callbackFun(her){
      
        google.charts.load('current', {'packages':['line', 'corechart']});
        google.charts.setOnLoadCallback(drawChart);
      
      
        function drawChart() {
      
          var button = document.getElementById('change-chart');
          var chartDiv = document.getElementById('chart_div');
      
      
          var data = new google.visualization.DataTable();
      
          data.addColumn('date', '3개월');
          data.addColumn('number', code);
          
          //data.addColumn('number', "Average Hours of Daylight");
      
          var resultList = [];
      
          for(var i in her)
          {
              var dollar = her[i].rate.split(',');
              var str = String(dollar[0]);
              var da = new Date(her[i].date);
              for(var j=1; j<dollar.length;j++)
              {
                str = str+String(dollar[j]);
              }
              maxi = maxi < Number(str) ? Number(str) : maxi;
              mini = mini < Number(str) ? mini : Number(str);
              var tmp = [da, Number(str)];
          
              resultList.push(tmp);
          }
          
          data.addRows(resultList);

          $('#maxiVal').text('max : ' + maxi);
          $('#miniVal').text('min : '+ mini);

          var materialOptions = {
            chart: {
              title: '3개월 환율정보'
            },
            width: 900,
            height: 500,
            series: {
              // Gives each series an axis name that matches the Y-axis below.
              0: {axis: 'Temps'},
              1: {axis: 'Daylight'}
            },
            axes: {
              // Adds labels to each axis; they don't have to match the axis names.
              y: {
                Temps: {label: '환율 ('+code+')'},
                Daylight: {label: 'Daylight'}
              }
            }
          };
      
          var classicOptions = {
            title: '마! 3개월 차트다',
            width: 900,
            height: 500,
            // Gives each series an axis that matches the vAxes number below.
            series: {
              0: {targetAxisIndex: 0},
              1: {targetAxisIndex: 1}
            },
            vAxes: {
              // Adds titles to each axis.
              0: {title: 'Temps (Celsius)'},
              1: {title: 'Daylight'}
            },
            hAxis: {
              ticks: [new Date(2014, 0), new Date(2014, 1), new Date(2014, 2), new Date(2014, 3),
                      new Date(2014, 4),  new Date(2014, 5), new Date(2014, 6), new Date(2014, 7),
                      new Date(2014, 8), new Date(2014, 9), new Date(2014, 10), new Date(2014, 11)
                    ]
            },
            vAxis: {
              viewWindow: {
                max: 30
              }
            }
          };
      
          function drawMaterialChart() {
            var materialChart = new google.charts.Line(chartDiv);
            materialChart.draw(data, materialOptions);
            //button.innerText = 'Change to Classic';
            //button.onclick = drawClassicChart;
          }
      
          // function drawClassicChart() {
          //   var classicChart = new google.visualization.LineChart(chartDiv);
          //   classicChart.draw(data, classicOptions);
          //   button.innerText = 'Change to Material';
          //   button.onclick = drawMaterialChart;
          // }
      
          drawMaterialChart();

          }
      }
    }
</script>



